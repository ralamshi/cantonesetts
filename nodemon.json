{
    "watch": [
        "server.js",
        "routes/",
        "services/",
        "middleware/",
        "utils/"
    ],
    "ext": "js,json",
    "ignore": [
        "test/",
        "logs/",
        "coverage/",
        "node_modules/"
    ],
    "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug"
    },
    "delay": 1000,
    "verbose": true
}